<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.constraint.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_margin="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/explore_according_circleimageview"
            android:layout_width="90dp"
            android:layout_height="90dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/explore_according_playlistNameText"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@color/color_White_Transparent"
            android:text="PlaylistName"
            android:textAlignment="center"
            android:textSize="12sp"
            app:layout_constraintBottom_toBottomOf="@+id/explore_according_circleimageview"
            app:layout_constraintEnd_toEndOf="@+id/explore_according_circleimageview"
            app:layout_constraintHorizontal_bias="0.511"
            app:layout_constraintStart_toStartOf="@+id/explore_according_circleimageview"
            app:layout_constraintTop_toTopOf="@+id/explore_according_circleimageview" />

        <ImageView
            android:id="@+id/explore_according_addimage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/explore_according_circleimageview"
            app:layout_constraintEnd_toEndOf="@+id/explore_according_playlistNameText"
            app:layout_constraintHorizontal_bias="0.508"
            app:layout_constraintStart_toStartOf="@+id/explore_according_circleimageview"
            app:layout_constraintTop_toTopOf="@+id/explore_according_circleimageview"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@android:drawable/ic_menu_info_details" />

    </android.support.constraint.ConstraintLayout>
</RelativeLayout>